{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
    },
    "include": [
        "_app.tsx",
        "next-env.d.ts",
        "images.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "pages/posts/[id].ts"
    ],
    "exclude": [
        "node_modules"
    ]
}